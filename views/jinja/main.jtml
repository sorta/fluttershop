{% extends "jinja/base.jtml" %}

{% block spire %}
    {{ super() }}
    <!-- CONTENT -->
    <div class="tab-content">
        <div class="tab_content_divider"></div>
        <div class="tab-pane active" id="ActiveTab">
            <div class="container">

                {% block messages %}

                    {% for msg in flash_alerts %}
                        <div class="alert alert-block fade in {{ msg['msg_classes'] }}">
                            <button type="button" class="close" data-dismiss="alert">Ã—</button>
                            {% if msg['title'] %}
                                <h4 class="alert-heading">{{ msg['title'] }}</h4>
                            {% endif %}
                            {{ msg['message'] }}
                        </div>
                    {% endfor %}

                {% endblock %}

                {% if logged_in %}
                    <div class="row-fluid">
                        <div class="span12">

                            {% block edit_post %}

                                {% include 'jinja/post_editor.jtml' %}

                            {% endblock %}
                        </div>
                    </div>
                {% endif %}

                {% include 'jinja/content.jtml' %}
            </div>
        </div>
    </div>
{% endblock %}
